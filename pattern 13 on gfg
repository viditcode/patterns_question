#include <bits/stdc++.h>

using namespace std;

// } Driver Code Ends
class Solution {
  public:
    void printTriangle(int n) {
        // code here
        int sum=1;
        for (int i=1 ; i<=n; i++){
            for (int j=1; j<=i;j++){
                cout << sum<<" " ;
                sum= sum+1;
            }
            cout <<endl;
        }
    }
};

//{ Driver Code Starts.

int main() {
    int t;
    cin >> t;
    while (t--) {
        int n;
        cin >> n;

        Solution ob;
        ob.printTriangle(n);
    }
    return 0;
}
